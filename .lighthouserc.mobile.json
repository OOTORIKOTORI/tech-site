{
  "ci": {
    "collect": {
      "url": ["https://migakiexplorer.jp"],
      "settings": {
        "formFactor": "mobile"
      },
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.70 }],
        "categories:seo": ["error", { "minScore": 1 }]
      }
    }
  }
}
